<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <!-- Text, 0,0 -->

        <!-- Name, 0,1 -->
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:columnCount="2"
            android:rowCount="1">

            <TextView
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/labelName"
                android:id="@+id/nameFenceTextView"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="15dp"
                android:textStyle="bold" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/nameFence"
                android:layout_row="0"
                android:layout_column="1"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="130dp"
                android:inputType="text" />
        </GridLayout>

        <!-- Address, 0,2 -->
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:columnCount="2"
            android:rowCount="1">

            <TextView
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/labelAddress"
                android:id="@+id/textView4"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="15dp"
                android:textStyle="bold" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_row="0"
                android:layout_column="1"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="130dp"
                android:id="@+id/addressFence"
                android:inputType="text" />
        </GridLayout>

        <!-- City, 0,3 -->
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:columnCount="2"
            android:rowCount="1">

            <TextView
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/labelCity"
                android:id="@+id/textView5"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="15dp"
                android:textStyle="bold" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/cityFence"
                android:layout_row="0"
                android:layout_column="1"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="130dp"
                android:inputType="text" />
        </GridLayout>

        <!-- Province, 0,4 -->
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:columnCount="2"
            android:rowCount="1">

            <TextView
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/labelProvince"
                android:id="@+id/textView6"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="15dp"
                android:textStyle="bold" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/provinceFence"
                android:layout_row="0"
                android:layout_column="1"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="130dp"
                android:inputType="text" />
        </GridLayout>

        <!-- Number, 0,5 -->
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:columnCount="3"
            android:rowCount="1">

            <TextView
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/labelNumber"
                android:id="@+id/textView7"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="15dp"
                android:textStyle="bold" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="phone"
                android:ems="10"
                android:id="@+id/numberFence"
                android:layout_row="0"
                android:layout_column="1"
                android:layout_marginRight="130dp"
                android:layout_marginLeft="15dp" />

        </GridLayout>

        <!-- Text SMS, 0,6 -->
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:columnCount="3"
            android:rowCount="1">

            <TextView
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/labelTextSMS"
                android:id="@+id/textView8"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="15dp"
                android:textStyle="bold" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/textSMSFence"
                android:layout_row="0"
                android:layout_column="1"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="130dp"
                android:inputType="text" />
        </GridLayout>

        <!-- Range, 0,7 -->
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:columnCount="2"
            android:rowCount="1">

            <TextView
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/labelRange"
                android:id="@+id/textView9"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="15dp"
                android:textStyle="bold" />

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/spinnerRange"
                android:layout_row="0"
                android:layout_column="1"
                android:textAlignment="center"
                android:layout_marginRight="130dp"
                android:spinnerMode="dialog"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="12dp" />

        </GridLayout>

        <!-- Event, 0,8 -->
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:columnCount="2"
            android:rowCount="1">

            <TextView
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/labelEvent"
                android:id="@+id/textView10"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="15dp"
                android:textStyle="bold" />

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/spinnerEvent"
                android:layout_row="0"
                android:layout_column="1"
                android:textAlignment="center"
                android:layout_marginRight="130dp"
                android:spinnerMode="dialog"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="12dp" />

        </GridLayout>

        <!-- ButtonSave, 0,9 -->
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="1"
            android:rowCount="1">


            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/labelButtonSave"
                android:id="@+id/buttonSaveFence"
                android:layout_column="0"
                android:layout_row="0"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:background="@color/colorGreenGoo"
                android:textColor="#ffffff" />
        </GridLayout>
    </LinearLayout>
</ScrollView>
