<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment_insert_geofence">

    <!-- TODO: Update blank fragment layout -->

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="right|bottom"
        android:columnCount="1"
        android:rowCount="14"
        android:rowOrderPreserved="false">

        <!-- Text, 0,0 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/new_fence_text"
            android:id="@+id/textView2"
            android:layout_row="0"
            android:layout_column="0" />

        <!-- Name, 0,1 -->
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_row="1"
            android:layout_column="0"
            android:columnCount="2"
            android:rowCount="1">

            <TextView
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Name"
                android:id="@+id/nameFenceTextView"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="15dp"
                android:textStyle="bold" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/nameFence"
                android:layout_row="0"
                android:layout_column="1"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="130dp" />
        </GridLayout>

        <!-- Address, 0,2 -->
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_row="2"
            android:layout_column="0"
            android:columnCount="2"
            android:rowCount="1">

            <TextView
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Address"
                android:id="@+id/textView4"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="15dp"
                android:textStyle="bold" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_row="0"
                android:layout_column="1"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="130dp"
                android:id="@+id/addressFence" />
        </GridLayout>

        <!-- City, 0,3 -->
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_row="3"
            android:layout_column="0"
            android:columnCount="2"
            android:rowCount="1">

            <TextView
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="City"
                android:id="@+id/textView5"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="15dp"
                android:textStyle="bold" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/cityFence"
                android:layout_row="0"
                android:layout_column="1"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="130dp" />
        </GridLayout>

        <!-- Province, 0,4 -->
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_row="4"
            android:layout_column="0"
            android:columnCount="2"
            android:rowCount="1">

            <TextView
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Province"
                android:id="@+id/textView6"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="15dp"
                android:textStyle="bold" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/provinceFence"
                android:layout_row="0"
                android:layout_column="1"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="130dp" />
        </GridLayout>

        <!-- Range, 0,5 -->
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_row="5"
            android:layout_column="0"
            android:columnCount="2"
            android:rowCount="1">

            <TextView
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Range(m)"
                android:id="@+id/textView7"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="15dp"
                android:textStyle="bold" />

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/spinnerRange"
                android:layout_row="0"
                android:layout_column="1"
                android:textAlignment="center"
                android:layout_marginRight="130dp"
                android:spinnerMode="dialog" />

        </GridLayout>

        <!-- ButtonSave, 0,6 -->
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_row="6"
            android:layout_column="0"
            android:columnCount="1"
            android:rowCount="1">


            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Save"
                android:id="@+id/buttonSaveFence"
                android:layout_column="0"
                android:layout_row="0"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp" />
        </GridLayout>

    </GridLayout>
</FrameLayout>
